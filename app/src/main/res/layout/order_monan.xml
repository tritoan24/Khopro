<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E1DADA"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:id="@+id/rc_monAnOrder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn Mục Khác"
            android:layout_gravity="bottom|end"
            android:textStyle="bold"
            android:background="@drawable/custom_button_huy"
            android:id="@+id/btn_backDanhMuc"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiếp Tục"
            android:layout_gravity="bottom|end"
            android:background="@drawable/custom_button_banan"
            android:textStyle="bold"
            android:id="@+id/btn_checkBill"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    </LinearLayout>
</FrameLayout>