<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa phiếu giảm giá"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/ed_maGG_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã giảm giá: "
        android:background="@drawable/custom_edt_banan"
        android:paddingVertical="20dp"
        android:paddingLeft="15dp"
        android:elevation="5dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/ed_MucGiam_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phần trăm giảm: "
        android:background="@drawable/custom_edt_banan"
        android:paddingVertical="20dp"
        android:paddingLeft="15dp"
        android:elevation="5dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/ed_soLuotDung_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số lượt dùng: "
        android:background="@drawable/custom_edt_banan"
        android:paddingVertical="20dp"
        android:paddingLeft="15dp"
        android:elevation="5dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_SuaGG_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_banan"
            android:elevation="5dp"
            android:text="Lưu"
            android:paddingHorizontal="60dp"
            android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_huySuaGG_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Huỷ"
            android:textColor="@color/white"
            android:paddingHorizontal="60dp"
            android:elevation="5dp"
            android:background="@drawable/custom_button_banan" />
    </LinearLayout>


</LinearLayout>