<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thay đổi thông tin"
        android:textStyle="bold"
        android:textSize="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/custom_item"
        android:backgroundTint="#E3DADA">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và tên:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="@drawable/custom_item"
            android:backgroundTint="#E3DADA"
            android:id="@+id/ed_hoTenNhanVienTT_update"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/custom_item"
        android:backgroundTint="#E3DADA">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuổi:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="@drawable/custom_item"
            android:backgroundTint="#E3DADA"
            android:id="@+id/ed_tuoiNhanVienTT_update"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/custom_item"
        android:backgroundTint="#E3DADA">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính: "
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="@drawable/custom_item"
            android:backgroundTint="#E3DADA"
            android:id="@+id/ed_gioiTinhNhanVienTT_update"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/custom_item"
        android:backgroundTint="#E3DADA">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="@drawable/custom_item"
            android:backgroundTint="#E3DADA"
            android:id="@+id/ed_sdtNhanVienTT_update"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Thay đổi"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="#44E24A"
            android:id="@+id/btn_update_profile"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Huỷ"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="#DF3A3A"
            android:id="@+id/btn_update_profile_cancel"></Button>
    </LinearLayout>


</LinearLayout>