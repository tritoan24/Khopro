<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#A8A2A2"
    >

    <ImageView
        android:id="@+id/buncha_image"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/anhbunchaloading"
        android:layout_gravity="center"
        android:layout_margin="36dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background"
        android:layerType="hardware"
        android:layout_marginTop="50dp"
        />
<TextView
    android:id="@+id/txtchaomung"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Chào mừng đến với ..."
    android:textSize="23dp"
    android:layout_marginTop="60dp"
    android:fontFamily="@font/font2loading"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="80dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="vui lòng đợi "
            android:gravity="center"
            android:textStyle="italic"
            android:fontFamily="@font/fontloading"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="60dp"
            android:layout_height="50dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"

            />
    </LinearLayout>



</LinearLayout>