<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm nhân viên"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/ed_maNhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edt_banan"
        android:elevation="5dp"
        android:hint="Mã nhân viên: "
        android:paddingVertical="20dp"
        android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/ed_tenBanAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edt_banan"
        android:elevation="5dp"
        android:hint="Họ tên: "
        android:paddingVertical="20dp"
        android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/ed_tuoiNhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edt_banan"
        android:elevation="5dp"
        android:hint="Tuổi: "
        android:paddingVertical="20dp"
        android:paddingLeft="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edt_banan"
        android:elevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:paddingLeft="15dp"
            android:text="Giới tính: "
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rdo_Nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/rdo_Nu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Nữ" />

    </LinearLayout>

    <EditText
        android:id="@+id/ed_sdtNhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edt_banan"
        android:elevation="5dp"
        android:hint="Số điện thoại: "
        android:paddingVertical="20dp"
        android:paddingLeft="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_themNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_banan"
            android:elevation="5dp"
            android:paddingHorizontal="60dp"
            android:text="Thêm"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_huyThemNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/custom_button_banan"
            android:elevation="5dp"
            android:paddingHorizontal="60dp"
            android:text="Huỷ"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>