<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/custom_monanoder"
        android:elevation="5dp"
        >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.9"
        android:textStyle="bold"
        android:text=" Bún chả chấm"
        android:textSize="15dp"
        android:textAlignment="center"
        android:id="@+id/tv_tenMonAnOrder"
        android:fontFamily="@font/fonth3"
        android:paddingLeft="10dp"
        />
    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/btn_giamDoAnOrder"
        android:background="@drawable/giam"
        android:layout_marginRight="10dp"

        >
    </ImageButton>
    <TextView
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1.2"
        android:text="0"
        android:textSize="26dp"
        android:id="@+id/tv_soLuong"
        android:gravity="center"

        android:background="#B8B7B7"
      >
    </TextView>
    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/btn_themDoAnOrder"
        android:background="@drawable/tang"
        android:layout_marginLeft="10dp"
        >
    </ImageButton>
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=" 20000"
        android:gravity="center"
        android:id="@+id/tv_giaMonAnOrder"/>


</LinearLayout>
</LinearLayout>
